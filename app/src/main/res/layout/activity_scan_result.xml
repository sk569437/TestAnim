<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F6FA"  >
    <RelativeLayout 
         android:id="@+id/rl_title1"
         android:layout_width="fill_parent" 
         android:layout_height="50.0dip"
         android:layout_alignParentTop="true"
         android:background="@drawable/nav_top" 
      >
    
       <ImageView 
          android:id="@+id/iv_title_back1" 
          android:layout_width="wrap_content" 
          android:layout_height="fill_parent" 
          android:layout_centerVertical="true" 
          android:paddingLeft="20.0dip" 
          android:paddingRight="20.0dip" 
          android:src="@drawable/icon_back" 
          android:background="@drawable/selector_icon_back" 
          android:contentDescription="@null"
        />
	   <TextView 
	     android:id="@+id/tv_title_text1" 
	     android:layout_width="wrap_content" 
	     android:layout_height="fill_parent" 
	     android:layout_centerInParent="true"
	     android:gravity="center"
	     android:text="@string/scan1"
	     android:textSize="20.0sp" 
	     android:textColor="#ffffffff" 
	     android:singleLine="true"
	   />
     </RelativeLayout>
     

     <TextView
         android:id="@+id/scan_result_txt"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:background="#414141"
         android:layout_marginTop="60dp"
         android:text="T"
         android:layout_marginLeft="150dp"
         android:gravity="center"
         android:textColor="#F9F6FA"
         android:textSize="35sp"
         android:textStyle="bold" />

     <TextView
         android:layout_width="fill_parent"
         android:layout_height="60dp"
         android:layout_marginTop="60dp"
         android:layout_marginLeft="8dp"
         android:text="文本内容为："
         android:textColor="#414141"
         android:textSize="15sp" />
     
     <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#414141"/>
     
       <TextView
         android:id="@+id/scan_result_xs1"
         android:layout_width="fill_parent"
         android:layout_height="60dp"
         android:layout_marginTop="8dp"
         android:layout_marginLeft="3dp"
         android:layout_marginRight="3dp"
         android:layout_marginBottom="8dp"
         android:text="ssss"
         android:textColor="#414141"
         android:textSize="15sp" />
     
    <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:layout_marginTop="30dp"
          android:background="#414141"/>
</LinearLayout>
